<div class="container-fluid p-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <!-- Cabeçalho -->
            <div class="text-center mb-3">
                <h1 class="fw-bold text-primary mb-2" style="font-size: 3rem;">
                    <i class="bi bi-check-circle me-3" style="font-size: 3rem;"></i>Concluir Etapa
                </h1>
            </div>

            <!-- Informações do Pedido -->
            <div class="card shadow-sm mb-0">
                <div class="card-body p-3">
                    <!-- Primeira linha: Código do Pedido e Data de Entrega -->
                    <div class="row mb-1 pb-1 border-bottom">
                        <div class="col-md-6">
                            <strong class="text-primary" style="font-size: 1.5rem;">
                                <i class="bi bi-tag me-2" style="font-size: 1.5rem;"></i>Código Pedido: 
                            </strong>
                            <span class="fw-bold" id="concluirCodPedido" style="font-size: 2rem;">-</span>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <strong class="text-primary" style="font-size: 1.5rem;">
                                <i class="bi bi-calendar-event me-2" style="font-size: 1.5rem;"></i>Data Entrega: 
                            </strong>
                            <span id="concluirDataEntrega" style="font-size: 1.75rem;">-</span>
                        </div>
                    </div>

                    <!-- Segunda linha: Descrição -->
                    <div class="row mb-1 pb-1 border-bottom">
                        <div class="col-12">
                            <strong class="text-primary" style="font-size: 1.5rem;">
                                <i class="bi bi-box me-2" style="font-size: 1.5rem;"></i>Descrição: 
                            </strong>
                            <span id="concluirDescricao" style="font-size: 1.75rem;">-</span>
                        </div>
                    </div>

                    <!-- Terceira linha: Tamanho -->
                    <div class="row mb-1 pb-1 border-bottom">
                        <div class="col-12">
                            <strong class="text-primary" style="font-size: 1.5rem;">
                                <i class="bi bi-rulers me-2" style="font-size: 1.5rem;"></i>Tamanho: 
                            </strong>
                            <span id="concluirTamanho" style="font-size: 1.75rem;">-</span>
                        </div>
                    </div>

                    <!-- Quarta linha: Quantidade -->
                    <div class="row mb-1">
                        <div class="col-12">
                            <strong class="text-primary" style="font-size: 1.5rem;">
                                <i class="bi bi-123 me-2" style="font-size: 1.5rem;"></i>Quantidade: 
                            </strong>
                            <span class="fw-bold" id="concluirQuantidade" style="font-size: 2.5rem;">-</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Controle de Perda -->
            <div class="card shadow-sm mb-3">
                <div class="card-body p-2">
                    <label for="inputPerda" class="form-label fw-bold mb-1 text-start d-block" style="font-size: 2rem;">
                        <i class="bi bi-exclamation-triangle me-2" style="font-size: 2rem;"></i>Perda
                    </label>
                    <div class="input-group" style="height: 100px;">
                        <button type="button" class="btn btn-outline-danger" id="btnDiminuirPerda" onclick="diminuirPerda()" style="min-width: 80px; font-size: 2.5rem; padding: 0;">
                            <i class="bi bi-dash-lg"></i>
                        </button>
                        <input type="number" class="form-control text-center fw-bold"
                            id="inputPerda" value="0" min="0"
                            style="font-size: 2.5rem; height: 100px; border-left: 0; border-right: 0; width: 75px;">
                        <button type="button" class="btn btn-outline-success" id="btnAumentarPerda" onclick="aumentarPerda()" style="min-width: 80px; font-size: 2.5rem; padding: 0;">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                        <button type="button" class="btn btn-primary btn-lg" id="btnFinalizar" onclick="finalizarEtapa()" style="min-width: 500px; font-size: 2rem; padding: 1rem; height: 100px;">
                            <i class="bi bi-check-lg me-2"></i>Finalizar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Combo Perda Produção (visível apenas se perda > 0) -->
            <div class="card shadow-sm mb-3" id="divComboPerda" style="display: none;">
                <div class="card-body p-2">
                    <label for="comboPerdaProducao" class="form-label fw-bold mb-1 text-start d-block" style="font-size: 2rem;">
                        <i class="bi bi-list-ul me-2" style="font-size: 2rem;"></i>Tipo de Perda
                    </label>
                    <select class="form-select form-select-lg" id="comboPerdaProducao" style="font-size: 2rem; height: 100px;">
                        <option value="0">Selecione...</option>
                    </select>
                </div>
            </div>

            <!-- Botão Sair -->
            <div class="mt-3 text-center">
                <button type="button" class="btn btn-outline-danger btn-lg w-100" id="btnSairConcluir" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Sair
                </button>
            </div>
        </div>
    </div>
</div>









