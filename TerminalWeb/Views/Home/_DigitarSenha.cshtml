<div class="container-fluid p-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="text-center mb-4">
                <h4 class="fw-bold mb-3">Digite sua senha</h4>
                <div class="visor-senha mb-4">
                    <input type="password"
                           id="senhaInput"
                           class="form-control form-control-lg text-center fw-bold"
                           placeholder="••••"
                           readonly
                           style="font-size: 2rem; letter-spacing: 0.5rem; height: 70px;">
                </div>
                <div class="teclado-numerico">
                    <!-- Números 1-9 -->
                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="1">
                                <span class="fs-2 fw-bold">1</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="2">
                                <span class="fs-2 fw-bold">2</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="3">
                                <span class="fs-2 fw-bold">3</span>
                            </button>
                        </div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="4">
                                <span class="fs-2 fw-bold">4</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="5">
                                <span class="fs-2 fw-bold">5</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="6">
                                <span class="fs-2 fw-bold">6</span>
                            </button>
                        </div>
                    </div>
                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="7">
                                <span class="fs-2 fw-bold">7</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="8">
                                <span class="fs-2 fw-bold">8</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="9">
                                <span class="fs-2 fw-bold">9</span>
                            </button>
                        </div>
                    </div>
                    <!-- Número 0, Apagar, Confirmar -->
                    <div class="row g-2 mb-2">
                        <div class="col-4">
                            <button type="button" class="btn btn-numero w-100 h-100 py-4" data-numero="0">
                                <span class="fs-2 fw-bold">0</span>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-apagar w-100 h-100 py-4" id="btnApagar">
                                <i class="bi bi-backspace display-5"></i>
                            </button>
                        </div>
                        <div class="col-4">
                            <button type="button" class="btn btn-confirmar w-100 h-100 py-4" id="btnConfirmar">
                                <i class="bi bi-check-circle display-5"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="button" class="btn btn-outline-danger w-100" id="btnSair" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-2"></i>Sair
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>




















