@using System.Data
@{
    var dadosExpedicao = ViewBag.DadosExpedicao as DataTable;
    var produtosExpedicao = ViewBag.ProdutosExpedicao as DataTable;
    DataRow? row = null;
    if (dadosExpedicao != null && dadosExpedicao.Rows.Count > 0)
    {
        row = dadosExpedicao.Rows[0];
    }
}

<div class="container-fluid p-3">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <!-- Cabeçalho -->
            <div class="text-center mb-3">
                <h1 class="fw-bold text-primary mb-2" style="font-size: 3rem;">
                    <i class="bi bi-truck me-3" style="font-size: 3rem;"></i>Expedição
                </h1>
            </div>

            @if (row != null)
            {
                <!-- Informações do Pedido -->
                <div class="card shadow-sm mb-3">
                    <div class="card-body p-3">
                        <!-- Primeira linha: Código do Pedido e Data de Entrega -->
                        <div class="row mb-2 pb-2 border-bottom">
                            <div class="col-md-6">
                                <strong class="text-primary" style="font-size: 1.5rem;">
                                    <i class="bi bi-tag me-2" style="font-size: 1.5rem;"></i>Pedidos: 
                                </strong>
                                <span class="fw-bold" style="font-size: 2rem;">@(row["COD_PEDIDO"]?.ToString() ?? "-")</span>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <strong class="text-primary" style="font-size: 1.5rem;">
                                    <i class="bi bi-calendar-event me-2" style="font-size: 1.5rem;"></i>Data Entrega: 
                                </strong>
                                <span style="font-size: 1.75rem;">@(row["DATA_ENTREGA"] != DBNull.Value ? Convert.ToDateTime(row["DATA_ENTREGA"]).ToString("dd/MM/yyyy") : "-")</span>
                            </div>
                        </div>

                        <!-- Segunda linha: Cliente -->
                        <div class="row mb-2 pb-2 border-bottom">
                            <div class="col-12">
                                <strong class="text-primary" style="font-size: 1.5rem;">
                                    <i class="bi bi-person me-2" style="font-size: 1.5rem;"></i>Cliente: 
                                </strong>
                                <span style="font-size: 1.75rem;">
                                    @{
                                        var cliente = row["FANTASIA"] != DBNull.Value && !string.IsNullOrEmpty(row["FANTASIA"]?.ToString()) 
                                            ? row["FANTASIA"]?.ToString() 
                                            : row["NOMERAZAO"]?.ToString();
                                    }
                                    @(cliente ?? "-")
                                </span>
                            </div>
                        </div>

                        <!-- Terceira linha: Endereço -->
                        <div class="row mb-2">
                            <div class="col-12">
                                <strong class="text-primary" style="font-size: 1.5rem;">
                                    <i class="bi bi-geo-alt me-2" style="font-size: 1.5rem;"></i>Endereço: 
                                </strong>
                                <span style="font-size: 1.75rem;">@(row["ENDERECOCOMPLETO"]?.ToString() ?? "-")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Grid de Produtos -->
                @if (produtosExpedicao != null && produtosExpedicao.Rows.Count > 0)
                {
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0" style="font-size: 1.5rem;">
                                <i class="bi bi-list-ul me-2"></i>Produtos do Pedido
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                                <table class="table table-striped table-hover mb-0" style="font-size: 1.25rem;">
                                    <thead class="table-primary sticky-top">
                                        <tr>
                                            <th style="font-size: 1.25rem; padding: 0.75rem;">Descrição</th>
                                            <th style="font-size: 1.25rem; padding: 0.75rem;">Tamanho</th>
                                            <th style="font-size: 1.25rem; padding: 0.75rem; text-align: center;">Quantidade</th>
                                            <th style="font-size: 1.25rem; padding: 0.75rem;">Etapa Atual</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (System.Data.DataRow prodRow in produtosExpedicao.Rows)
                                        {
                                            var idEtapa = prodRow["ID_ETAPA"] != DBNull.Value ? Convert.ToInt32(prodRow["ID_ETAPA"]) : 0;
                                            var corFundo = idEtapa == 8 ? "background-color: #d4edda;" : "background-color: #f8d7da;";
                                            
                                            <tr style="@corFundo">
                                                <td style="padding: 0.75rem; vertical-align: middle;">
                                                    @(prodRow["DESCRICAO"]?.ToString() ?? "-")
                                                </td>
                                                <td style="padding: 0.75rem; vertical-align: middle;">
                                                    @(prodRow["TAMANHO"]?.ToString() ?? "-")
                                                </td>
                                                <td style="padding: 0.75rem; text-align: center; vertical-align: middle; font-weight: bold;">
                                                    @(prodRow["QUANTIDADE"]?.ToString() ?? "0")
                                                </td>
                                                <td style="padding: 0.75rem; vertical-align: middle;">
                                                    @(prodRow["ETAPAATUAL"]?.ToString() ?? "-")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Botões de Impressão -->
                <div class="card shadow-sm mb-3">
                    <div class="card-body p-3">
                        <div class="row g-2">
                            <div class="col-md-6">
                                <button type="button" class="btn btn-success btn-lg w-100" id="btnImprimirEtiqueta" 
                                        style="font-size: 2rem; padding: 1rem;"
                                        data-id-pedido="@(row["ID_PEDIDO"]?.ToString() ?? "")">
                                    <i class="bi bi-printer me-2"></i>Imprimir Etiqueta
                                </button>
                            </div>
                            <div class="col-md-6">
                                <button type="button" class="btn btn-primary btn-lg w-100" id="btnImprimirPedido" 
                                        style="font-size: 2rem; padding: 1rem;"
                                        data-id-pedido="@(row["ID_PEDIDO"]?.ToString() ?? "")">
                                    <i class="bi bi-file-text me-2"></i>Imprimir Pedido
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning text-center" style="font-size: 1.5rem;">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    @if (ViewBag.Error != null)
                    {
                        <span>@ViewBag.Error</span>
                    }
                    else
                    {
                        <span>Nenhum dado encontrado para este pedido.</span>
                    }
                </div>
            }

            <!-- Botão Sair -->
            <div class="mt-3 text-center">
                <button type="button" class="btn btn-outline-danger btn-lg w-100" id="btnSairExpedicao" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Sair
                </button>
            </div>
        </div>
    </div>
</div>

