@model GestaoPedidosVizabel.Models.NFe

@{
    ViewData["Title"] = "Excluir NF-e";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">Confirmar Exclus√£o</h5>
    </div>
    <div class="card-body">
        <h6 class="text-danger">Tem certeza que deseja excluir esta NF-e?</h6>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Numero)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Numero)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Serie)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Serie)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Modelo)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Modelo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataEmissao)</dt>
            <dd class="col-sm-9">@Model.DataEmissao.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ValorTotalNfe)</dt>
            <dd class="col-sm-9">@Model.ValorTotalNfe.ToString("C")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Status)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="IdNfe" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>
