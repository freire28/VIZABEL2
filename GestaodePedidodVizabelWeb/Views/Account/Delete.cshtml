@model GestaoPedidosVizabel.Models.Usuario

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0 text-danger">Excluir Usuário</h5>
    </div>
    <div class="card-body">
        <h6>Tem certeza que deseja excluir este usuário?</h6>
        <dl class="row mt-3">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Login)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Login)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Administrador)</dt>
            <dd class="col-sm-9">
                @if (Model.Administrador)
                {
                    <span class="badge bg-danger">Sim</span>
                }
                else
                {
                    <span class="badge bg-secondary">Não</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="IdUsuario" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </form>
    </div>
</div>



















