@model IEnumerable<GestaoPedidosVizabel.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Lista de Pedidos</h2>
    <div class="d-flex gap-2">
        <a asp-action="RelatorioPDF" asp-route-searchString="@ViewBag.SearchString" class="btn btn-danger" target="_blank">
            <i class="bi bi-file-pdf"></i> Gerar Relatório
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Pedido
        </a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-10">
                <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString" placeholder="Pesquisar por código, cliente, status ou vendedor...">
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-search"></i> Pesquisar
                </button>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.SearchString as string))
            {
                <div class="col-12">
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Limpar pesquisa
                    </a>
                </div>
            }
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CodPedido)</th>
                        <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                        <th>@Html.DisplayNameFor(model => model.DataPedido)</th>
                        <th>@Html.DisplayNameFor(model => model.DataEntrega)</th>
                        <th>@Html.DisplayNameFor(model => model.StatusPedido)</th>
                        <th>@Html.DisplayNameFor(model => model.Vendedor)</th>
                        <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CodPedido)</td>
                            <td>@(item.Cliente?.Nomerazao ?? "N/A")</td>
                            <td>@item.DataPedido.ToString("dd/MM/yyyy")</td>
                            <td>@item.DataEntrega.ToString("dd/MM/yyyy")</td>
                            <td>@(item.StatusPedido?.Descricao ?? "N/A")</td>
                            <td>@(item.Vendedor?.Nome ?? "-")</td>
                            <td>
                                @if (item.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inativo</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.IdPedido" class="btn btn-sm btn-info" title="Detalhes">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.IdPedido" class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    @if (@item.EmitirNfe == true && @item.StatusPedido.IdStatuspedido != 1 )
                                    {
                                        <a asp-controller="NFe" asp-action="Create" asp-route-idPedido="@item.IdPedido" class="btn btn-sm btn-success" title="Gerar NFe" target="_blank">
                                            <i class="bi bi-receipt"></i> NFe
                                        </a>
                                    }
                                  
                                    <a asp-action="Delete" asp-route-id="@item.IdPedido" class="btn btn-sm btn-danger" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




