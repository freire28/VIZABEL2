@model GestaoPedidosVizabel.Models.Configuracao

@{
    ViewData["Title"] = "Excluir Configuração";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="card-title mb-0">Confirmar Exclusão</h5>
    </div>
    <div class="card-body">
        <h6 class="text-danger">Tem certeza que deseja excluir esta configuração?</h6>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Chave)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Chave)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descricao)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Valor)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Valor)</dd>
        </dl>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="IdConfiguracao" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Excluir
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancelar
            </a>
        </form>
    </div>
</div>




















