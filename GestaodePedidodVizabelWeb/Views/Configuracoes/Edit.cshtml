@model GestaoPedidosVizabel.Models.Configuracao

@{
    ViewData["Title"] = "Editar Configuração";
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Editar Configuração</h5>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" form="configuracaoForm" class="btn btn-primary btn-sm">
                    <i class="bi bi-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="configuracaoForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdConfiguracao" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Chave" class="form-label"></label>
                    <input asp-for="Chave" class="form-control" />
                    <span asp-validation-for="Chave" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Valor" class="form-label"></label>
                    <input asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                        <label asp-for="Ativo" class="form-check-label"></label>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-check">
                        <input type="hidden" name="ConsiderarNoPrazoEntrega" value="false" />
                        <input type="checkbox" name="ConsiderarNoPrazoEntrega" value="true" class="form-check-input" id="ConsiderarNoPrazoEntrega" @(Model.ConsiderarNoPrazoEntrega == true ? "checked" : "") />
                        <label class="form-check-label" for="ConsiderarNoPrazoEntrega">@Html.DisplayNameFor(m => m.ConsiderarNoPrazoEntrega)</label>
                    </div>
                </div>
            </div>

            <div class="row mt-4 pt-3 border-top">
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Salvar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

