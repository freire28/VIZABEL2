@model GestaoPedidosVizabel.Models.EtapaProducao
@using GestaoPedidosVizabel.Models

@{
    ViewData["Title"] = "Editar Etapa de Produção";
    var funcoes = ViewBag.Funcoes as List<Funcao> ?? new List<Funcao>();
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Editar Etapa de Produção</h5>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" form="etapaProducaoForm" class="btn btn-primary btn-sm">
                    <i class="bi bi-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="etapaProducaoForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdEtapa" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <input asp-for="Descricao" class="form-control" placeholder="Ex: Corte, Costura, Acabamento, etc." maxlength="60" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="QuantidadeDias" class="form-label"></label>
                    <input asp-for="QuantidadeDias" class="form-control" type="number" min="0" />
                    <span asp-validation-for="QuantidadeDias" class="text-danger"></span>
                </div>
                <div class="col-md-3 mb-3">
                    <label asp-for="IdFuncao" class="form-label">Função</label>
                    <select asp-for="IdFuncao" class="form-select">
                        <option value="">Selecione uma função...</option>
                        @foreach (var funcao in funcoes)
                        {
                            @if (Model.IdFuncao.HasValue && Model.IdFuncao.Value == funcao.IdFuncao)
                            {
                                <option value="@funcao.IdFuncao" selected>@funcao.Descricao</option>
                            }
                            else
                            {
                                <option value="@funcao.IdFuncao">@funcao.Descricao</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="IdFuncao" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-check">
                        <input type="hidden" name="Ativo" value="false" />
                        <input type="checkbox" name="Ativo" value="true" class="form-check-input" id="Ativo" @(Model.Ativo ? "checked" : "") />
                        <label class="form-check-label" for="Ativo">@Html.DisplayNameFor(m => m.Ativo)</label>
                    </div>
                </div>
            </div>

            <div class="row mt-4 pt-3 border-top">
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Salvar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

