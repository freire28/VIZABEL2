@model GestaoPedidosVizabel.Models.Funcionario
@using GestaoPedidosVizabel.Models

@{
    ViewData["Title"] = "Editar Funcionário";
    var funcoes = ViewBag.Funcoes as List<Funcao> ?? new List<Funcao>();
}

<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Editar Funcionário</h5>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" form="funcionarioForm" class="btn btn-primary btn-sm">
                    <i class="bi bi-save"></i> Salvar
                </button>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit" id="funcionarioForm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdFuncionario" />
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome completo do funcionário" maxlength="60" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Celular" class="form-label"></label>
                    <input asp-for="Celular" class="form-control" placeholder="(00) 00000-0000" maxlength="20" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FuncaoPrincipal" class="form-label">Função Principal</label>
                    <select asp-for="FuncaoPrincipal" class="form-select">
                        <option value="">Selecione uma função...</option>
                        @foreach (var funcao in funcoes)
                        {
                            @if (Model.FuncaoPrincipal.HasValue && Model.FuncaoPrincipal.Value == funcao.IdFuncao)
                            {
                                <option value="@funcao.IdFuncao" selected>@funcao.Descricao</option>
                            }
                            else
                            {
                                <option value="@funcao.IdFuncao">@funcao.Descricao</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="FuncaoPrincipal" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Pin" class="form-label"></label>
                    <input asp-for="Pin" class="form-control" placeholder="PIN de acesso" maxlength="5" />
                    <span asp-validation-for="Pin" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-check mb-2">
                        <input type="hidden" name="Ativo" value="false" />
                        <input type="checkbox" name="Ativo" value="true" class="form-check-input" id="Ativo" @(Model.Ativo ? "checked" : "") />
                        <label class="form-check-label" for="Ativo">@Html.DisplayNameFor(m => m.Ativo)</label>
                    </div>
                    <div class="form-check">
                        <input type="hidden" name="Vendedor" value="false" />
                        <input type="checkbox" name="Vendedor" value="true" class="form-check-input" id="Vendedor" @(Model.Vendedor == true ? "checked" : "") />
                        <label class="form-check-label" for="Vendedor">@Html.DisplayNameFor(m => m.Vendedor)</label>
                    </div>
                </div>
            </div>

            <div class="row mt-4 pt-3 border-top">
                <div class="col-12">
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Salvar
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




















